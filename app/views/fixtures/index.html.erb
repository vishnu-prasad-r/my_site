<h1>Fixtures</h1>

<%= will_paginate @fixtures %>

<table id="gradient-style">
	<thead>
  <tr>
  	<th scope="col">Date</th>
    <th scope="col">Team One</th>
    <th scope="col">Team Two</th>
    <th scope="col">Division</th>
    <th scope="col">Court</th>

    
