  </tr>
  </thead>
  	<tfoot>
    	<tr>
        	<td colspan="5">Give background color to the table cells to achieve seamless transition</td>
        </tr>
	</tfoot>
<tbody>
<% @fixtures.each do |fixture| %>
  <tr data-href="<%= edit_fixture_path(fixture) %>" class="<%= cycle("odd", "even") -%>">
